[data-svgchart-type="bar"]

  & .bar
    fill: green
    &.over
      fill: red

  & text
    fill: #999999
    stroke: #000000
    pointer-events: none

  & .ruler
    pointer-events: none
    stroke: rgba(0,0,0, 0.2)
    stroke-width: 0.4
    fill: transparent
    &.zero
      stroke-width: 5
      stroke: rgba(255,0,0, 0.8)
      stroke-style: dotted;
