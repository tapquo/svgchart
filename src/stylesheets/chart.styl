
[data-svgchart-type]

  // Item elements (bar, point or pie)
  & .item
    fill: ITEM_BACKGROUND_DEFAULT
    stroke: darken(ITEM_BACKGROUND_DEFAULT, ITEM_OPACITY)
    stroke-width: 1px
    opacity: 0.7

    &:hover
      opacity: 0.9

  & .index_0
    fill: ITEM_BACKGROUND_1
    stroke: darken(ITEM_BACKGROUND_1, ITEM_OPACITY)

  & .index_1
    fill: ITEM_BACKGROUND_2
    stroke: darken(ITEM_BACKGROUND_2, ITEM_OPACITY)

  & .index_2
    fill: ITEM_BACKGROUND_3
    stroke: darken(ITEM_BACKGROUND_3, ITEM_OPACITY)

  & .index_3
    fill: ITEM_BACKGROUND_4
    stroke: darken(ITEM_BACKGROUND_4, ITEM_OPACITY)

  & .index_4
    fill: ITEM_BACKGROUND_5
    stroke: darken(ITEM_BACKGROUND_5, ITEM_OPACITY)

  & .index_5
    fill: ITEM_BACKGROUND_6
    stroke: darken(ITEM_BACKGROUND_6, ITEM_OPACITY)

  // Ruler
  & .ruler
    stroke: RULER_COLOR
    stroke-width: 0.9
    stroke-dasharray: 3 3
    opacity: 0.4
    fill: none
    &.zero
      opacity: 1
      stroke-dasharray: none
      stroke-width: 2

  // Path lines or curves
  & path
    opacity: 0.3

  // Generic texts
  & text
    font-size: 12px
    pointer-events: none



[data-svgchart-type="line"]
  & path[class*="index_"]
    fill: none
